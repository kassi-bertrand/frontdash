{
  "info": {
    "name": "FrontDash API - Professor Demo Collection",
    "description": "Complete demonstration of all required functionality for course presentation. Covers all staff and regular student requirements. This collection can be run multiple times.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://{{PUBLIC_IP}}:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Staff Login Tests",
      "description": "Required: Successful and invalid login by staff member",
      "item": [
        {
          "name": "✓ Successful Staff Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"staff_test\",\n  \"password\": \"Admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "✗ Invalid Staff Login (Wrong Password)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"staff_test\",\n  \"password\": \"WrongPassword123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
