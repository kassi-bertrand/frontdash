    {
      "name": "5. Order Management",
      "description": "Required: Create order, retrieve, assign driver, update delivery time",
      "item": [
        {
          "name": "Create New Order",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurant_id\": 2,\n  \"guest_phone\": \"2145554444\",\n  \"delivery_address\": {\n    \"building_number\": \"789\",\n    \"street_name\": \"Maple Drive\",\n    \"apartment\": \"Suite 5\",\n    \"city\": \"Dallas\",\n    \"state\": \"TX\",\n    \"zip_code\": \"75203\"\n  },\n  \"delivery_contact_name\": \"Tom Wilson\",\n  \"delivery_contact_phone\": \"2145554444\",\n  \"items\": [\n    {\n      \"menu_item_id\": 4,\n      \"quantity\": 2\n    }\n  ],\n  \"tip_amount\": 5.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders",
              "host": ["{{base_url}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Retrieve Existing Order",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/orders/ORD-20251028-TEST",
              "host": ["{{base_url}}"],
              "path": ["api", "orders", "ORD-20251028-TEST"]
            }
          }
        },
        {
          "name": "Assign Driver to Order",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"driver_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/ORD-20251028-TEST/assign-driver",
              "host": ["{{base_url}}"],
              "path": ["api", "orders", "ORD-20251028-TEST", "assign-driver"]
            }
          }
        },
        {
          "name": "Update Order with Delivery Time",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"actual_delivery_time\": \"2025-10-28T14:30:00Z\",\n  \"delivery_duration_minutes\": 35\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/ORD-20251028-TEST/delivery-time",
              "host": ["{{base_url}}"],
              "path": ["api", "orders", "ORD-20251028-TEST", "delivery-time"]
            }
          }
        }
      ]
